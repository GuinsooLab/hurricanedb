  <artifactId>hc-connectors</artifactId>
  <packaging>pom</packaging>
  <name>HurricaneDB Connectors</name>
  <url>https://guinsoolab.github.io/glab/#/app/hurricaneDB</url>
  <properties>
    <pinot.root>${basedir}/..</pinot.root>
  </properties>

  <modules>
